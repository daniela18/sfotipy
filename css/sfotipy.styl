@import "normalize.styl"

@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?r05ho3');
	src:url('../fonts/icomoon.eot?#iefixr05ho3') format('embedded-opentype'),
		url('../fonts/icomoon.woff?r05ho3') format('woff'),
		url('../fonts/icomoon.ttf?r05ho3') format('truetype'),
		url('../fonts/icomoon.svg?r05ho3#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background #F3F3F3
	.container
		background white
		border-bottom solid 1px #D0D2D3
		color #818181
		font-family 'Varela Round', sans-serif
		header
			height 82px
			width 1100px
			margin 0 auto
			.logo 
				padding 1.2em 0
				float left
			.user-container
				width 457px
				float right
				.search-container
					margin 1.2em
					float left
					.search
						position relative
						&:before
							border-right solid 1px #818181
							content "\e601"
							font-family 'icomoon'
							padding 0.5em 0.6em
							position absolute
							top 0.4em
						&:after
							content "\e602"
							font-family 'icomoon'
							font-size 1.5em
							position absolute
							right 0.5em
							top 0.4em
						input
							border 1px solid #818181
							border-radius 5px
							height 40px
							text-align center	
							width 220px
				.user
					overflow hidden
					.name
						padding 1.9em	0
						p 
							margin 0
							float left
						img
							float left
							 padding 0.6em 
					.image
						float left
						padding 1.2em	1em
						img 
							border-radius 50%
							height 40px
							width 40px
	nav
		height 82px
		width 1100px
		margin 0 auto
		ul 
			overflow hidden
			padding 0
			margin 0
			list-style none
			.list-container
				float left
				li
					border-top solid 4px transparent
					padding 1em 
					&:hover
						border-top solid 4px #818181
					a 
						color #333333
						font-size 16px
						text-decoration none
	.tophits
		width 1100px
		margin 0 auto
		overflow hidden
		.album 
			width 26%
			float left
			&:last-child
				width 21%
			h2
				font-size 22px
				color #333333
				margin 0.4em 0 0 0
			p 
				color #818181
				margin 0
				font-size 18px
			.image-album
				img
					width 225px
					height 225px
	.fondo
		background #333333
		height 69px
		footer
			width 1100px
			margin 0 auto
			.text
				padding 1.5em
				float left
				a
					color white
					font-size 18px
					padding 1em	
			.logo2
				float left
				padding 0.8em 0
				
					
			
				

				



		



